      \getAlphnum\Rpoly@vname\Rpoly@i
      \Cfor{\edef\Rpoly@ii{1}}{\Rpoly@ii<#5}{\Incr\Rpoly@i}\do{%
        \Incr\Rpoly@ii
        \expandafter\edef\csname\@Alph\Rpoly@i\endcsname{%
          \csname #6\romannumeral\Rpoly@ii\endcsname}%
      }%
  \fi
}
