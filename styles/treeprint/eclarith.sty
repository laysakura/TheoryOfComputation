\def\hatch{\@ifnextchar[{\sh!hatch}{\sh!hatch[]}}

\def\sh!hatch[#1](#2,#3)(#4,#5){\@killglue
	\@tfor\sh!oparg:=#1\do{%
		\if\sh!oparg L\drawline(#2,#3)(#2,#5)\fi
